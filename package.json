{
  "name": "moneymanager",
  "private": "true",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "lint:ruby": "cd packages/backend && bundle exec rubocop -A",
    "test": "npm-run-all test:*",
    "test:mobile": "yarn jest --passWithNoTests --findRelatedTests packages/mobile",
    "test:frontend": "yarn jest --passWithNoTests --findRelatedTests packages/frontend",
    "test:backend": "sh scripts/test_ruby.sh",
    "postinstall": "sh scripts/install.sh"
  },
  "workspaces": {
    "packages": [
      "packages/mobile",
      "packages/frontend",
      "packages/eslint-config"
    ]
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "yarn test:frontend && yarn test:mobile"
    ],
    "**/*.tsx": [
      "eslint --fix",
      "yarn test:frontend && yarn test:mobile"
    ],
    "**/*.rb": [
      "yarn lint:ruby",
      "yarn test:backend"
    ]
  },
  "repository": "git@github.com:vinibispo/moneymanager.git",
  "author": "vinibispo <vini.bispo015@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.12.7",
    "@babel/core": "^7.12.7",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-export-extensions": "^7.0.0-beta.32",
    "@babel/plugin-transform-modules-commonjs": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@babel/preset-stage-0": "^7.8.3",
    "@babel/preset-typescript": "^7.12.7",
    "@babel/runtime": "^7.12.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@moneymanager/eslint-config": "*",
    "@testing-library/dom": "^7.28.1",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.15",
    "babel-jest": "^26.6.3",
    "babel-plugin-styled-components": "^1.12.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-dom": "^4.0.0",
    "lint-staged": "^10.5.1",
    "metro-react-native-babel-preset": "^0.64.0",
    "npm-run-all": "^4.1.5",
    "react-inline-svg": "^1.1.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@unform/core": "^2.1.3",
    "@unform/mobile": "^2.1.3",
    "@unform/web": "^2.1.3",
    "next": "^10.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-native": "^0.63.3",
    "styled-components": "^5.2.1"
  }
}
